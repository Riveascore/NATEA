<h1>Listing payment_methods</h1>

<table>
  <thead>
    <tr>
      <th>Donator</th>
      <th>Type</th>
      <th>Routing number</th>
      <th>Expiration date</th>
      <th>Billing address</th>
      <th>Phone number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.donator_id %></td>
        <td><%= payment_method.type %></td>
        <td><%= payment_method.routing_number %></td>
        <td><%= payment_method.expiration_date %></td>
        <td><%= payment_method.billing_address_id %></td>
        <td><%= payment_method.phone_number_id %></td>
        <td><%= link_to 'Show', payment_method %></td>
        <td><%= link_to 'Edit', edit_payment_method_path(payment_method) %></td>
        <td><%= link_to 'Destroy', payment_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

